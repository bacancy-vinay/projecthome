<%= form_with(model: [@resume, @education]) do |f| %>
<%= hidden_field_tag :resume_id, params[:resume_id] %>

<div class="field">
<%= f.label :name %> 
<%= f.text_field :name, autofocus:true, autocomplete: "name" %>
</div>

<div class="field">
<%= f.label :board %> 
<%= f.text_field :board, autofocus:true, autocomplete: "board" %>
</div>

<div class="field">
<%= f.label :degree %> 
<%= f.text_field :degree, autofocus:true, autocomplete: "degree" %>
</div>

<div class="field">
<%= f.label :cource %> 
<%= f.text_field :cource, autofocus:true, autocomplete: "cource" %>
</div>

<div class="field">
<%= f.label :graduation_status %> 
<%= f.select(:graduation_status, Education::STATUS) %>
</div>

<div class="field">
<%= f.label :pass_year%> 
<%= f.date_field :pass_year, autofocus:true, autocomplete: "pass_year" %>
</div>

<div class="field">
  <%= f.label :county %><br />
  <%= f.select :country,  options_for_select(CS.countries.map { |c| [c[1], c[0]] } ) %>
</div>

<div class="field">
  <%= f.label :state %><br />
  <%= f.select :state, options_for_select([])%>
</div>

<div class="field">
  <%= f.label :city %><br />
  <%= f.select :city, options_for_select([]) %>
</div>

<div class="field">
<%= f.label :result %> 
<%= f.text_field :result, autofocus:true, autocomplete: "result" %>
</div>
<div class="actions">
  <%= f.submit "Submit" %>
</div>
<% end %>